rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read their own document.
      allow read: if isOwner(userId);
      // A new user can create their own document.
      allow create: if isOwner(userId);
      // An existing user can update their own document.
      allow update: if isOwner(userId);
      // Users cannot delete their own documents (for data integrity).
      allow delete: if false;


      // Rules for the 'daily_stats' subcollection
      match /daily_stats/{statId} {
        // A user can read and write to their own daily_stats.
        allow read, write: if isOwner(userId);
      }
    }
  }
}
